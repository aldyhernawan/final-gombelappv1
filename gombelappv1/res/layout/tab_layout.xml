        android:src="@drawable/lokasi_small" />
-->
    <ImageButton
        android:id="@+id/imageButtonsaran"
        style="@style/ActivityButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/saran_small" />

    <ImageButton
        android:id="@+id/imageButtonuser"
        style="@style/ActivityButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/user_small" />

</LinearLayout>